<!-- res/values/styles.xml -->
<resources>
    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/backgroundWhite</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <!-- Top Bar Style -->
    <style name="TopBarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Button Style with 3D Effect -->
    <style name="Button3DStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/buttonBlue</item>
        <item name="android:textColor">@color/buttonTextWhite</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">8dp</item> <!-- Shadow effect for 3D look -->
        <item name="android:background">@drawable/button_3d</item>
    </style>

    <!-- White Background Style -->
    <style name="MainBodyStyle">
        <item name="android:background">@color/backgroundWhite</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>
